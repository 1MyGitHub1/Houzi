<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
  <log4net>
    <appender name="MainLogFile" type="log4net.Appender.RollingFileAppender">
      <param name="Threshold" value="ALL"/>
      <param name="ImmediateFlush" value="true"/>
      <param name="File" value="Logs\\Main_"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaximumFileSize" value="4096KB"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="RollingStyle" value="Composite"/>
      <param name="DatePattern" value="yyyy-MM-dd'.log'"/>
      <param name="Encoding" value="UTF-8"/>
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock" />
      <param name="CountDirection" value="1"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--<ConversionPattern value="%d{HH:mm:ss} [%-5level] 文件名称：[ %file ]%newline 异常方法：[ %method ]%newline 异常行号：[ %line行 ]%newline 记录时间：[ %date ]%newline 日志级别：[ %-5level ]%newline 出错类：[ %logger ]%newline 属性:[ %property{NDC} ]%newline 错误描述：[ %message ]%newline%n"/>-->
        <ConversionPattern value="%d{HH:mm:ss} [%-5level]%newline  时间：[ %date ]%newline  类型：[ %logger ]%newline  描述：[ %message ]%newline%n"/>
      </layout>
    </appender>

    <appender name="DatabaseLogFile" type="log4net.Appender.RollingFileAppender">
      <param name="Threshold" value="ALL"/>
      <param name="ImmediateFlush" value="true"/>
      <param name="File" value="Logs\\DB_"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaximumFileSize" value="4096KB"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="RollingStyle" value="Composite"/>
      <param name="DatePattern" value="yyyy-MM-dd'.log'"/>
      <param name="Encoding" value="UTF-8"/>
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock" />
      <param name="CountDirection" value="1"/>
      <layout type="log4net.Layout.PatternLayout">
        <ConversionPattern value="%d{HH:mm:ss}  [%-5level]  消息：%message%n"/>
      </layout>
    </appender>

    <logger name="DatabaseLog">
      <level value="ALL" />
      <appender-ref ref="MainLogFile"/>
    </logger>
    <logger name="MainLog">
      <level value="ALL" />
      <appender-ref ref="MainLogFile"/>
    </logger>

    <!--<root>
      <level value="ALL"/>
    </root>
    <logger name="DatabaseLog" additivity="false">
      <appender-ref ref="MainLogFile"/>
    </logger>
    <logger name="MainLog" additivity="false">
      <appender-ref ref="MainLogFile"/>
    </logger>-->
  </log4net>
</configuration>